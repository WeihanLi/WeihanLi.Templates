{
    "$schema": "http://json.schemastore.org/template",
    "author": "WeihanLi",
    "classifications": [ "Common","Library" ], 
    "name": "WeihanLi Class Library Template",
    "shortName": "weihanli-lib",
    "description": "A project for creating a WeihanLi class library that targets .NET Standard",
    "groupIdentity": "WeihanLi",
    "defaultName": "WeihanLi.ClassLibrary1",
    "tags": {
      "language": "C#",
      "type":"project"
    },
    "sourceName": "TLibraryName",
    "preferNameDirectory": true,
    "symbols":{
      "includeTest": {
        "type": "parameter",
        "description": "include a unittest project",
        "datatype": "bool",
        "defaultValue": "true"
      },
      "skipRestore": {
        "type": "parameter",
        "datatype": "bool",
        "description": "If specified, skips the automatic restore of the project on create.",
        "defaultValue": "false"
      }
    },
    "sources":[{
      "modifiers": [
          {
            "condition": "(!includeTest)",
            "exclude": [ "test/**/*"]
          }
      ]
    }],
    "postActions": [
      {
        "condition": "(!skipRestore)",
        "description": "Restore NuGet packages required by this project.",
        "manualInstructions": [
          { "text": "Run 'dotnet restore'" }
        ],
        "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
        "continueOnError": true
      }
    ]
  }